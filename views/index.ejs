<body>
    <div class="page-wrapper bg-blue p-t-100 p-b-100 font-robo">
        <div class="wrapper wrapper--w680">
            <div class="card card-1">
                <div class="card-heading"></div>
                <div class="card-body">
                    <h2 class="title">Claim Form</h2>
                    <form method="POST" action="form" enctype="multipart/form-data">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">                        
                                    <input class="input--style-1" type="text" placeholder="OrderId" name="orderId">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">                        
                                    <input class="input--style-1" type="email" placeholder="Email Id used for purchase" name="email">
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input class="input--style-1" type="text" placeholder="First Name" name="name">    
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <input class="input--style-1" type="text" placeholder="Last Name" name="lname">    
                                </div>
                            </div>
                        </div>

                        <div class="input-group">                        
                            <input class="input--style-1" type="text" placeholder="Street Address" name="address">                            
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input class="input--style-1" type="text" placeholder="City" name="city"> 
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <input class="input--style-1" type="text" placeholder="State" name="state">    
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <input class="input--style-1" type="text" placeholder="Country" name="country">    
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <input class="input--style-1" type="text" placeholder="Zipcode" name="ZipCode">    
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">                        
                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <select id="selectedItems" name="claimType" onchange="changeValue()">
                                            <option disabled="disabled" selected="selected">Claim Type</option>
                                            <option>loss</option>
                                            <option>damage</option>
                                            <option>theft</option>
                                        </select>
                                        <div class="select-dropdown"></div>
                                    </div>
                                </div>
                            </div>                        
                            <div class="col-2">
                                <div class="input-group">
                                    <input class="input--style-1" type="text" placeholder="Tracking Number" name="tracking">
                                </div>
                            </div>
                        </div>                        
                        <div class="row row-space"> 
                            <div class="col-2">
                       
                            </div>
                            <div class="col-2">
                                <div>
                                    <input class="input--style-1" type="file" id="UploadField" placeholder="Upload" name="upload" value="">
                                </div>
                            </div>
                            <div class="input-group">
                                <input class="input--style-1" type="text" id="reportNumber" placeholder="Police Report Number" name="police">
                            </div>
                        </div> 
                        <div class="p-t-20">
                            <input class="btn btn--radius btn--green" type="submit" value="Submit">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        jQuery(document).ready(function(){
            // $('#uploadBTN').hide();
            // $('#reportNumber').hide();
            // $('#UploadField').hide();
            changeValue()
        });
        function changeValue(){
            var data = $("#selectedItems option:selected").val();           
            if(data == 'damage'){
                $('#uploadBTN').show();
                $('#UploadField').show();
                $('#reportNumber').hide();
            }else if(data == 'theft'){
                $('#reportNumber').show();
                $('#uploadBTN').hide();
                $('#UploadField').hide();
            }else{
                $('#uploadBTN').hide();
                $('#UploadField').hide();
                $('#reportNumber').hide();
            }
        }
    </script>
